{
  "name": "bluesky-swahili-cli",
  "version": "1.2.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "dist/cli.js",
  "bin": {
    "swahili": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run build:web",
    "build:web": "vite build",
    "build:backend": "tsc",
    "dev": "concurrently \"tsx watch src/server.ts\" \"vite\"",
    "start": "node dist/server.js",
    "start:cli": "node dist/cli.js",
    "test": "vitest run",
    "lint": "prettier --check src && prettier --check web",
    "lint:fix": "prettier --write src && prettier --write web",
    "prepublishOnly": "npm run build && npm test && npm run lint"
  },
  "keywords": [
    "bluesky",
    "swahili",
    "language-detection",
    "cli"
  ],
  "author": "giftcharles",
  "license": "MIT",
  "description": "CLI to fetch and filter Bluesky posts by Swahili language",
  "repository": {
    "type": "git",
    "url": "https://github.com/giftcharles/Bluesky-Swahili-CLI.git"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/langdetect": "^0.2.2",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.14.0",
    "globals": "^16.5.0",
    "pm2": "^6.0.13",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3",
    "vite": "^5.0.8",
    "vitest": "^3.1.1",
    "vitest-mock-extended": "^1.0.0"
  },
  "dependencies": {
    "@atproto/api": "^0.18.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "langdetect": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
